<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/entryRowDateId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:textStyle="bold"
                android:textSize="13sp"
                android:text="mm/dd/yyyy"
                android:fontFamily="@font/kingthings"/>

            <TextView
                android:id="@+id/entryTitleId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/entryRowDateId"
                android:paddingLeft="15dp"
                android:paddingTop="8dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Title"
                android:fontFamily="@font/kingthings"/>

            <TextView
                android:id="@+id/entryTextId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/entryTitleId"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:textSize="15sp"
                android:lineSpacingExtra="3dp"
                android:text="entry text"
                android:fontFamily="@font/kingthings"
                />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>