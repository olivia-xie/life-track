<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activities.NewEntryActivity"
    tools:showIn="@layout/activity_new_entry">

    <TextView
        android:id="@+id/entryDateId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="mm/dd/yyyy"/>

    <EditText
        android:id="@+id/titleEditTextId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/entryDateId"
        android:hint="@string/Title"
        android:padding="15dp"/>

    <EditText
        android:id="@+id/entryEditTextId"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:padding="15dp"
        android:layout_below="@id/entryDateId"/>


</RelativeLayout>