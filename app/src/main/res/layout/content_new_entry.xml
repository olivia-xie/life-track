<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activities.NewEntryActivity"
    tools:showIn="@layout/activity_new_entry">

    <TextView
        android:id="@+id/entryDateId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kingthings"
        android:padding="18dp"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/titleEditTextId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/entryDateId"
        android:background="@android:color/transparent"
        android:fontFamily="@font/kingthings"
        android:hint="@string/Title"
        android:textSize="19sp"
        android:padding="18dp"
        android:textColor="#AE000000"
        android:textColorHint="#949494" />

    <EditText
        android:id="@+id/entryEditTextId"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_below="@id/titleEditTextId"
        android:fontFamily="@font/kingthings"
        android:gravity="top|left"
        android:hint="How was your day today?"
        android:padding="18dp"
        android:textColor="#AE000000"
        android:textColorHint="#949494"
        android:textSize="16sp"
        android:background="@android:color/transparent"
        android:lineSpacingExtra="5dp"/>


</RelativeLayout>