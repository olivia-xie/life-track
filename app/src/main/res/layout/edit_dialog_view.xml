<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/editDateButtonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kingthings"
        android:padding="18dp"
        android:textAllCaps="false"
        android:background="@android:color/transparent"
        android:textSize="19sp"/>

    <EditText
        android:id="@+id/editTitleId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editDateButtonId"
        android:background="@android:color/transparent"
        android:fontFamily="@font/kingthings"
        android:hint="@string/Title"
        android:textSize="19sp"
        android:padding="18dp"
        android:textColor="#AE000000"
        android:textColorHint="#949494" />

    <EditText
        android:id="@+id/editEntryId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTitleId"
        android:fontFamily="@font/kingthings"
        android:gravity="top|left"
        android:hint="How was your day today?"
        android:padding="18dp"
        android:textColor="#AE000000"
        android:textColorHint="#949494"
        android:textSize="16sp"
        android:background="@android:color/transparent"
        android:lineSpacingExtra="5dp"/>

    <Button
        android:id="@+id/saveEditButtonId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:layout_below="@id/editEntryId"
        android:fontFamily="@font/kingthings"
        android:text="@string/save"
        android:textColor="@android:color/white"
        android:textStyle="bold"/>

</RelativeLayout>