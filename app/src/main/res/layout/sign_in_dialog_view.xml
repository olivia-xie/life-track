<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="25dp">

            <TextView
                android:id="@+id/signInTitleId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/kingthings"
                android:text="Sign In"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/signInEmailEditTextId"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_below="@id/signInTitleId"
                android:layout_centerHorizontal="true"
                android:background="@drawable/round_edit_text"
                android:fontFamily="@font/kingthings"
                android:paddingLeft="20dp"
                android:hint="Email"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/signInPasswordEditTextId"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_below="@id/signInEmailEditTextId"
                android:layout_centerHorizontal="true"
                android:background="@drawable/round_edit_text"
                android:fontFamily="@font/kingthings"
                android:paddingLeft="20dp"
                android:hint="Password"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/signInButtonId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/signInPasswordEditTextId"
                android:background="@color/colorAccent"
                android:fontFamily="@font/kingthings"
                android:text="@string/set_pin"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>