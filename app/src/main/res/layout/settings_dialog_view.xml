<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="25dp">

            <TextView
                android:id="@+id/settingsTitleId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/kingthings"
                android:text="@string/settings"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/passcodeTextId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/settingsTitleId"
                android:fontFamily="@font/kingthings"
                android:foregroundGravity="left"
                android:gravity="start"
                android:paddingStart="15dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="@string/passcode_protection" />

            <Switch
                android:id="@+id/passcodeSwitchId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/settingsTitleId"
                android:layout_toEndOf="@id/passcodeTextId"
                android:paddingStart="130dp"
                android:paddingTop="22dp"
                android:paddingBottom="10dp" />

            <TextView
                android:id="@+id/backUpTextId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/passcodeTextId"
                android:fontFamily="@font/kingthings"
                android:foregroundGravity="left"
                android:gravity="start"
                android:paddingStart="15dp"
                android:paddingTop="20dp"
                android:paddingBottom="40dp"
                android:text="Back Up Data" />

            <Switch
                android:id="@+id/backUpSwitchId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/passcodeTextId"
                android:layout_toEndOf="@id/passcodeTextId"
                android:paddingStart="130dp"
                android:paddingTop="22dp"
                android:paddingBottom="10dp" />

            <Button
                android:id="@+id/signOutButtonId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign out"
                android:textSize="13sp"
                android:fontFamily="@font/kingthings"
                android:background="@color/colorPrimary"
                android:layout_below="@+id/backUpTextId"
                android:layout_centerInParent="true"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>