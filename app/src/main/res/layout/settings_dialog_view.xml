<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="25dp">

            <TextView
                android:id="@+id/settingsTitleId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/kingthings"
                android:text="@string/settings"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/passcodeTextId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/settingsTitleId"
                android:fontFamily="@font/kingthings"
                android:foregroundGravity="left"
                android:gravity="start"
                android:paddingLeft="15dp"
                android:paddingTop="20dp"
                android:text="@string/passcode_protection" />

            <Switch
                android:id="@+id/passcodeSwitchId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/settingsTitleId"
                android:layout_toRightOf="@id/passcodeTextId"
                android:paddingLeft="130dp"
                android:paddingTop="22dp"
                android:paddingBottom="5dp" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>